<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTypeImages">
      <launchConfigurationTypeImage
            configTypeID="de.cau.cs.kieler.sccharts.launchconfig.scchartsLaunchConfiguration"
            icon="images/sccharts_icon16.png"
            id="de.cau.cs.kieler.sccharts.launchconfig.scchartsLaunchConfigurationImage">
      </launchConfigurationTypeImage>
   </extension>
   <extension
         point="org.eclipse.debug.core.launchConfigurationTypes">
      <launchConfigurationType
            delegate="de.cau.cs.kieler.sccharts.launchconfig.LaunchConfiguration"
            id="de.cau.cs.kieler.sccharts.launchconfig.scchartsLaunchConfiguration"
            modes="run,debug"
            name="SCCharts Application"
            public="true">
      </launchConfigurationType>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            class="de.cau.cs.kieler.sccharts.launchconfig.ui.SCChartsLaunchConfigurationTabGroup"
            id="de.cau.cs.kieler.sccharts.launchconfig.ui.scchartsLaunchConfigurationTabGroup"
            type="de.cau.cs.kieler.sccharts.launchconfig.scchartsLaunchConfiguration">
         <launchMode
               mode="run">
         </launchMode>
         <launchMode
               mode="debug">
         </launchMode>
      </launchConfigurationTabGroup>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchShortcuts">
      <shortcut
            class="de.cau.cs.kieler.sccharts.launchconfig.SCTLaunchShortcut"
            icon="images/sccharts_icon16.png"
            id="de.cau.cs.kieler.sccharts.launchconfig.SCTLaunchShortcut"
            label="SCT Application"
            modes="run, debug">
         <contextualLaunch>
            <enablement>
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <or>
                        <test
                              forcePluginActivation="true"
                              property="org.eclipse.debug.ui.matchesPattern"
                              value="*.sct"/>
                     </or>
                  </iterate>
               </with>
            </enablement>
         </contextualLaunch>
      </shortcut>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="de.cau.cs.kieler.sccharts.wizard.category"
            name="SCCharts">
      </category>
      <wizard
            category="de.cau.cs.kieler.sccharts.wizard.category"
            class="de.cau.cs.kieler.sccharts.projectwizard.SCChartsProjectWizard"
            hasPages="true"
            icon="images/sccharts_icon16.png"
            id="de.cau.cs.kieler.sccharts.wizards.project"
            name="SCT Project"
            project="true">
         <description>
            Create a new SCCharts project.
         </description>
      </wizard>
      <wizard
            canFinishEarly="false"
            category="de.cau.cs.kieler.sccharts.wizard.category"
            class="de.cau.cs.kieler.sccharts.filewizard.SCChartsFileWizard"
            hasPages="true"
            icon="images/sccharts_icon16.png"
            id="de.cau.cs.kieler.sccharts.wizards.file"
            name="SCT File"
            project="false">
         <description>
            Create a new SCT file.
         </description>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="de.cau.cs.kieler.sccharts.environments.EnvironmentsPage"
            id="de.cau.cs.kieler.sccharts.environmentsPreferencePage"
            name="SCCharts Environments">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="de.cau.cs.kieler.sccharts.environments.Initializer">
      </initializer>
   </extension>

</plugin>
