<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="de.cau.cs.kieler.prom.environmentInitializer" name="Environment Initializer" schema="schema/de.cau.cs.kieler.prom.environmentInitializer.exsd"/>
   <extension-point id="de.cau.cs.kieler.prom.wrapperCodeAnnotationAnalyzer" name="Wrapper Code Annotation Analyzer" schema="schema/de.cau.cs.kieler.prom.wrapperCodeAnnotationAnalyzer.exsd"/>
   <extension-point id="de.cau.cs.kieler.prom.simulator" name="KIELER Simulator" schema="schema/de.cau.cs.kieler.prom.simulator.exsd"/>
   <extension
         point="org.eclipse.debug.core.launchConfigurationTypes">
      <launchConfigurationType
            delegate="de.cau.cs.kieler.prom.launch.KiCoLaunchConfig"
            id="de.cau.cs.kieler.prom.launch.kiCoLaunchConfig"
            modes="run,debug"
            name="KiCo Compilation"
            public="true">
      </launchConfigurationType>
   </extension>
   <extension
         point="de.cau.cs.kieler.prom.environmentInitializer">
      <initializer
            class="de.cau.cs.kieler.prom.environments.PromEnvironmentsInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ltk.core.refactoring.renameParticipants">
      <renameParticipant
            class="de.cau.cs.kieler.prom.launch.LaunchConfigRenameParticipant"
            id="de.cau.cs.kieler.prom.renameParticipant"
            name="Launch Config Rename Participant">
         <enablement>
            <instanceof
                  value="org.eclipse.core.resources.IResource">
            </instanceof>
         </enablement>
      </renameParticipant>
   </extension>
   <extension
         point="org.eclipse.ltk.core.refactoring.deleteParticipants">
      <deleteParticipant
            class="de.cau.cs.kieler.prom.launch.LaunchConfigDeleteParticipant"
            id="de.cau.cs.kieler.prom.deleteParticipant"
            name="Launch Config Delete Participant">
         <enablement>
            <instanceof
                  value="org.eclipse.core.resources.IResource">
            </instanceof></enablement>
      </deleteParticipant>
   </extension>
   <extension
         id="KiCoBuilder"
         name="KiCoBuilder"
         point="org.eclipse.core.resources.builders">
      <builder
            callOnEmptyDelta="false"
            hasNature="true"
            isConfigurable="true">
         <run
               class="de.cau.cs.kieler.prom.build.KiCoBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="KiCoNature"
         name="KiCoNature"
         point="org.eclipse.core.resources.natures">
      <builder
            id="de.cau.cs.kieler.prom.KiCoBuilder">
      </builder>
      <runtime>
         <run
               class="de.cau.cs.kieler.prom.build.KiCoNature">
         </run>
      </runtime>
   </extension>
   <extension
         id="kico.problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
   </extension>

</plugin>
