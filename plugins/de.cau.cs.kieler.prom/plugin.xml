<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTypeImages">
      <launchConfigurationTypeImage
            configTypeID="de.cau.cs.kieler.prom.launchconfig.launchConfiguration"
            icon="icons/sccharts_icon16.png"
            id="de.cau.cs.kieler.prom.launchconfig.launchConfigurationImage">
      </launchConfigurationTypeImage>
   </extension>
   <extension
         point="org.eclipse.debug.core.launchConfigurationTypes">
      <launchConfigurationType
            delegate="de.cau.cs.kieler.prom.launchconfig.LaunchConfiguration"
            id="de.cau.cs.kieler.prom.launchconfig.launchConfiguration"
            modes="run,debug"
            name="SCCharts Application"
            public="true">
      </launchConfigurationType>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            class="de.cau.cs.kieler.prom.launchconfig.ui.LaunchConfigurationTabGroup"
            id="de.cau.cs.kieler.prom.launchconfig.ui.launchConfigurationTabGroup"
            type="de.cau.cs.kieler.prom.launchconfig.launchConfiguration">
         <launchMode
               mode="run">
         </launchMode>
         <launchMode
               mode="debug">
         </launchMode>
      </launchConfigurationTabGroup>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchShortcuts">
      <shortcut
            class="de.cau.cs.kieler.prom.launchconfig.LaunchShortcut"
            icon="icons/sccharts_icon16.png"
            id="de.cau.cs.kieler.prom.launchconfig.launchShortcut"
            label="SCT Application"
            modes="run, debug">
         <contextualLaunch>
            <enablement>
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <or>
                        <test
                              forcePluginActivation="true"
                              property="org.eclipse.debug.ui.matchesPattern"
                              value="*.sct"/>
                     </or>
                  </iterate>
               </with>
            </enablement>
         </contextualLaunch>
      </shortcut>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="de.cau.cs.kieler.prom.wizard.category"
            name="KIELER SCCharts">
      </category>
      <wizard
            category="de.cau.cs.kieler.prom.wizard.category"
            class="de.cau.cs.kieler.prom.projectwizard.SCChartsProjectWizard"
            finalPerspective="de.cau.cs.kieler.Modeling"
            hasPages="true"
            icon="icons/sccharts_icon16.png"
            id="de.cau.cs.kieler.prom.wizards.project"
            name="SCT Project"
            project="true">
         <description>
            Create a new SCCharts project.
         </description>
      </wizard>
      <wizard
            canFinishEarly="false"
            category="de.cau.cs.kieler.prom.wizard.category"
            class="de.cau.cs.kieler.prom.filewizard.SCChartsFileWizard"
            finalPerspective="de.cau.cs.kieler.Modeling"
            hasPages="true"
            icon="icons/sccharts_icon16.png"
            id="de.cau.cs.kieler.prom.wizards.file"
            name="SCT File"
            project="false">
         <description>
            Create a new SCT file.
         </description>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="de.cau.cs.kieler.prom.scchartsPage"
            class="de.cau.cs.kieler.prom.environments.EnvironmentsPage"
            id="de.cau.cs.kieler.prom.environmentsPreferencePage"
            name="Environments">
      </page>
      <page
            class="de.cau.cs.kieler.prom.environments.SCChartsPage"
            id="de.cau.cs.kieler.prom.scchartsPage"
            name="KIELER SCCharts">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="de.cau.cs.kieler.prom.environments.Initializer">
      </initializer>
   </extension>
   <extension
         point="de.cau.cs.kieler.kex">
      <category
            id="de.cau.cs.kieler.prom.examples"
            title="SCCharts">
      </category>
      <example
            author="KIELER Workgroup"
            category="de.cau.cs.kieler.prom.examples"
            contact="kieler@informatik.uni-kiel.de"
            description="Example project with wrapper code from annotations which compiles and deploys to LEGO Mindstorms with leJOS NXT"
            generation_date="folks_this_field_is_user_input_idenpendent"
            id="de.cau.cs.kieler.prom.examples.mindstorms.nxj"
            overview_pic="examples/nxj_project/image.png"
            root_directory="examples/nxj_project/"
            title="SCCharts for leJOS NXT">
         <resource
               direct_open="false"
               local_path="examples/nxj_project/src/"
               resource_type="folder">
         </resource>
         <resource
               direct_open="false"
               local_path="examples/nxj_project/sct-gen/"
               resource_type="folder">
         </resource>
         <resource
               direct_open="false"
               local_path="examples/nxj_project/snippets/"
               resource_type="folder">
         </resource>
         <resource
               direct_open="false"
               local_path="examples/nxj_project/snippets/mindstorms_nxj/"
               resource_type="folder">
         </resource>
         <resource
               direct_open="false"
               local_path="examples/nxj_project/sct-gen/Main.java"
               resource_type="file">
         </resource>
         <resource
               direct_open="false"
               local_path="examples/nxj_project/sct-gen/Model.java"
               resource_type="file">
         </resource>
         <resource
               direct_open="false"
               local_path="examples/nxj_project/snippets/mindstorms_nxj/snippets.ftl"
               resource_type="file">
         </resource>
         <resource
               direct_open="false"
               local_path="examples/nxj_project/src/Main.ftl"
               resource_type="file">
         </resource>
         <resource
               direct_open="false"
               local_path="examples/nxj_project/src/Model.sct"
               resource_type="file">
         </resource>
      </example>
   </extension>

</plugin>
