<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="de.cau.cs.kieler.scl.controlflow.commands.category"
            id="de.cau.cs.kieler.scl.controlflow.commands.SCLToSCLCFTransformation"
            name="SCLToSCLCFTransformation">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.cau.cs.kieler.scl.controlflow.handler.SCLToSCLCFFileHandler"
            commandId="de.cau.cs.kieler.scl.controlflow.commands.SCLToSCLCFTransformation">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               id="de.cau.cs.kieler.scl.controlflow.coretransformations"
               label="SCL to SCL Controlflow"
               mnemonic="T">
            <separator
                  name="de.cau.cs.kieler.core.ui.separator1"
                  visible="true">
            </separator>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="popup:de.cau.cs.kieler.scl.controlflow.coretransformations">
         <command
               commandId="de.cau.cs.kieler.scl.controlflow.commands.SCLToSCLCFTransformation"
               label="SCL to SCL Controlflow"
               mnemonic="A"
               style="push">
            <visibleWhen>
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <adapt
                        type="org.eclipse.core.resources.IFile">
                     <test
                           forcePluginActivation="true"
                           property="org.eclipse.core.resources.extension"
                           value="scl">
                     </test>
                  </adapt>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   
</plugin>
