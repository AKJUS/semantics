<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="de.cau.cs.kieler.esterel.scl.EsterelToScl"
               label="Transform to SCL"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <adapt
                        type="org.eclipse.core.resources.IResource">
                     <test
                           property="org.eclipse.core.resources.extension"
                           value="strl">
                     </test>
                  </adapt>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="de.cau.cs.kieler.esterel.scl.handlers.EsterelToSclHandler"
            id="de.cau.cs.kieler.esterel.scl.EsterelToScl"
            name="Tranform to SCL">
      </command>
   </extension>
   <extension
         point="de.cau.cs.kieler.kico.transformation">
      <transformationMethod
            class="de.cau.cs.kieler.esterel.scl.transformations.EsterelToSclTransformation"
            id="ESTERELTOSCL"
            method="transform">
      </transformationMethod>
   </extension>
   <extension
         point="de.cau.cs.kieler.kico.ui.transformation">
      <editor
            editor="de.cau.cs.kieler.esterel.Esterel"
            transformations="ESTERELTOSCL">
      </editor>
   </extension>

</plugin>
