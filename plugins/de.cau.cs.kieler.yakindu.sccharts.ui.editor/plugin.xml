<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<!--
-->

<plugin>

   <extension point="org.eclipse.emf.ecore.generated_package">
      <package
            uri="http://kieler.org/synccharts"
            class="de.cau.cs.kieler.yakindu.sccharts.ui.editor.syncgraph.SyncgraphPackage"
            genModel="model/syncgraph.genmodel"/>
   </extension>
  <!-- Editor -->
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="de.cau.cs.kieler.yakindu.sccharts.ui.editor.factory.KielerExecutableExtensionFactory:org.yakindu.sct.ui.editor.editor.StatechartDiagramEditor"
            contributorClass="org.yakindu.sct.ui.editor.editor.StatechartDiagramActionbarContributor"
            default="true"
            extensions="scc"
            id="de.cau.cs.kieler.yakindu.sccharts.ui.editor.SCChartsEditor"
            matchingStrategy="org.eclipse.gmf.runtime.diagram.ui.resources.editor.parts.DiagramDocumentEditorMatchingStrategy"
            name="KIELER SCCharts Editor">
      </editor>
   </extension>
   <!-- Wizard -->
   <extension
         point="org.eclipse.ui.newWizards">
     <category id="KIELER" name="KIELER"/>
      <wizard
            category="KIELER"
            class="de.cau.cs.kieler.yakindu.sccharts.ui.editor.factory.KielerExecutableExtensionFactory:org.yakindu.sct.ui.editor.wizards.CreationWizard"
            id="de.cau.cs.kieler.yakindu.sccharts.ui.editor.KielerWizard"
            name="KIELER SCCharts Model"
            project="false">
      </wizard>
   </extension>
   <!-- Palette Provider -->
    <extension
         point="org.eclipse.gmf.runtime.diagram.ui.paletteProviders">
      <paletteProvider
            class="de.cau.cs.kieler.yakindu.sccharts.ui.editor.factory.KielerExecutableExtensionFactory:org.yakindu.sct.ui.editor.providers.SCTPaletteProvider">
             <Priority
               name="Highest">
         </Priority>
         <editor
               class="org.yakindu.sct.ui.editor.editor.StatechartDiagramEditor">
         </editor>
      </paletteProvider>
  </extension>

	<extension point="org.yakindu.sct.ui.editor.expressions">
		<ExpressionLanguageProvider
			class="de.cau.cs.kieler.yakindu.sccharts.ui.integration.scchartstext.TransitionExpressionProvider"
			resourceExtension="scc"
			semanticTarget="TransitionSpecification">
		</ExpressionLanguageProvider>
		<ExpressionLanguageProvider
			class="de.cau.cs.kieler.yakindu.sccharts.ui.integration.scchartstext.StatechartExpressionProvider"
			resourceExtension="scc"
			semanticTarget="StatechartSpecification">
		</ExpressionLanguageProvider>
	 	<ExpressionLanguageProvider
			class="de.cau.cs.kieler.yakindu.sccharts.ui.integration.scchartstext.StateExpressionProvider"
			resourceExtension="scc"
			semanticTarget="StateSpecification">
			</ExpressionLanguageProvider>
	</extension>

</plugin>

	

