<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<plugin>

   <extension point="org.eclipse.emf.ecore.generated_package">
      <package
            uri="http://kieler.cs.cau.de/yakindu/synccharts/"
            class="de.cau.cs.kieler.yakindu.sgraph.syncgraph.SyncgraphPackage"
            genModel="model/syncgraph.genmodel"/>
   </extension>
  <!-- Editor -->
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="de.cau.cs.kieler.yakindu.synccharts.ui.editor.factory.SyncChartsExecutableExtensionFactory:org.yakindu.sct.ui.editor.editor.StatechartDiagramEditor"
            contributorClass="org.yakindu.sct.ui.editor.editor.StatechartDiagramActionbarContributor"
            default="true"
            extensions="ysc"
            icon="icons/obj16/logo-ys-16.png"
            id="de.cau.cs.kieler.yakindu.synccharts.ui.editor.SyncChartsDiagramEditor"
            matchingStrategy="org.eclipse.gmf.runtime.diagram.ui.resources.editor.parts.DiagramDocumentEditorMatchingStrategy"
            name="KIELER SyncCharts Editor">
      </editor>
   </extension>
      
   
   <!-- Wizard -->
   <extension
         point="org.eclipse.ui.newWizards">
     <category id="KIELER" name="KIELER"/>
      <wizard
            category="KIELER"
            class="de.cau.cs.kieler.yakindu.synccharts.ui.editor.factory.SyncChartsExecutableExtensionFactory:org.yakindu.sct.ui.editor.wizards.CreationWizard"
            icon="icons/obj16/logo-ys-16.png"
            id="de.cau.cs.kieler.yakindu.synccharts.ui.editor.KielerWizard"
            name="KIELER SyncCharts Model"
            project="false">
      </wizard>
   </extension>
   
   <!-- Palette Provider -->
    <extension
         point="org.eclipse.gmf.runtime.diagram.ui.paletteProviders">
      <paletteProvider
            class="de.cau.cs.kieler.yakindu.ui.editor.factory.KielerPaletteFactory:org.yakindu.sct.ui.editor.providers.SCTPaletteProvider">
             <Priority
               name="Highest">
         </Priority>
         <editor
               class="org.yakindu.sct.ui.editor.editor.StatechartDiagramEditor">
         </editor>
      </paletteProvider>
  </extension>

	<extension point="org.yakindu.sct.ui.editor.expressions">
		<ExpressionLanguageProvider
			class="de.cau.cs.kieler.yakindu.synccharts.ui.integration.stext.TransitionExpressionProvider"
			resourceExtension="ysc"
			semanticTarget="TransitionSpecification">
		</ExpressionLanguageProvider>
		<ExpressionLanguageProvider
			class="de.cau.cs.kieler.yakindu.synccharts.ui.integration.stext.StatechartExpressionProvider"
			resourceExtension="ysc"
			semanticTarget="StatechartSpecification">
		</ExpressionLanguageProvider>
	 	<ExpressionLanguageProvider
			class="de.cau.cs.kieler.yakindu.synccharts.ui.integration.stext.StateExpressionProvider"
			resourceExtension="ysc"
			semanticTarget="StateSpecification">
			</ExpressionLanguageProvider>
	</extension>
<!-- Property Tabs -->
<extension point="org.eclipse.ui.views.properties.tabbed.propertyContributor" id="prop-contrib">
      <propertyContributor
            contributorId="de.cau.cs.kieler.yakindu.synccharts.ui.editor.SyncChartsDiagramEditor"
            labelProvider="org.yakindu.sct.ui.editor.propertysheets.SheetLabelProvider">
         <propertyCategory category="domain"/>
         <propertyCategory category="visual"/>
         <propertyCategory category="extra"/>
      </propertyContributor>
   </extension>
   
    <extension point="org.eclipse.ui.views.properties.tabbed.propertyTabs" id="proptabs">
      <propertyTabs contributorId="de.cau.cs.kieler.yakindu.synccharts.ui.editor.SyncChartsDiagramEditor">
          <propertyTab
             category="domain"
             id="property.tab.domain"
             label="Model"/>
          <propertyTab
             category="visual"
             id="property.tab.AppearancePropertySection"
             label="Appearance"/>
          <propertyTab
             category="visual"
             id="property.tab.DiagramPropertySection"
             label="Diagram"/>
      </propertyTabs>
   </extension>  

<!-- Propertysheets -->
<!-- Property Tabs -->   
   <extension point="org.eclipse.ui.views.properties.tabbed.propertySections" id="propsections">
      <propertySections contributorId="de.cau.cs.kieler.yakindu.synccharts.ui.editor.SyncChartsDiagramEditor">
		<!-- State model section -->         
         <propertySection
            id="property.section.domain.state" 
            tab="property.tab.domain"
            class="de.cau.cs.kieler.yakindu.ui.editor.propertysheets.SyncStatePropertySection">
           <input type="de.cau.cs.kieler.yakindu.ui.editor.parts.SyncStateEditPart"/>
           <input type="org.yakindu.sct.ui.editor.editparts.StateNameEditPart"/>
           <input type="org.yakindu.sct.ui.editor.editparts.StateTextCompartmentEditPart"/>
           <input type="org.yakindu.sct.ui.editor.editparts.StateTextCompartmentExpressionEditPart"/>
         </propertySection>
        <!-- Transition model section -->         
         <propertySection
            id="property.section.domain.transition" 
            tab="property.tab.domain"
            class="de.cau.cs.kieler.yakindu.ui.editor.propertysheets.SyncTransitionPropertySection">
            <input type="de.cau.cs.kieler.yakindu.ui.editor.parts.SyncTransitionEditPart"/>
            <input type="org.yakindu.sct.ui.editor.editparts.TransitionExpressionEditPart"/>
         </propertySection>
            <!-- Region model section -->         
         <propertySection
            id="property.section.domain.region" 
            tab="property.tab.domain"
            class="org.yakindu.sct.ui.editor.propertysheets.RegionPropertySection">
           <input type="org.yakindu.sct.ui.editor.editparts.RegionEditPart"/>
         </propertySection>
            <!-- Choice model section -->         
         <propertySection
            id="property.section.domain.choice" 
            tab="property.tab.domain"
            class="org.yakindu.sct.ui.editor.propertysheets.ChoicePropertySection">
            <input type="org.yakindu.sct.ui.editor.editparts.ChoiceEditPart"/>
         </propertySection>
         
         <propertySection id="property.section.ConnectorAppearancePropertySection" 
            filter="org.eclipse.gmf.runtime.diagram.ui.properties.filters.ConnectionEditPartPropertySectionFilter" 
            class="org.eclipse.gmf.runtime.diagram.ui.properties.sections.appearance.ConnectionAppearancePropertySection" 
            tab="property.tab.AppearancePropertySection">
         </propertySection>
         <propertySection id="property.section.ShapeColorAndFontPropertySection" 
            filter="org.eclipse.gmf.runtime.diagram.ui.properties.filters.ShapeEditPartPropertySectionFilter" 
            class="org.eclipse.gmf.runtime.diagram.ui.properties.sections.appearance.ShapeColorsAndFontsPropertySection" 
            tab="property.tab.AppearancePropertySection">
         </propertySection> 
         <propertySection id="property.section.DiagramColorsAndFontsPropertySection" 
            filter="org.eclipse.gmf.runtime.diagram.ui.properties.filters.DiagramEditPartPropertySectionFilter" 
            class="org.eclipse.gmf.runtime.diagram.ui.properties.sections.appearance.DiagramColorsAndFontsPropertySection" 
            tab="property.tab.AppearancePropertySection">
         </propertySection>     
         <propertySection id="property.section.RulerGridPropertySection" 
            filter="org.eclipse.gmf.runtime.diagram.ui.properties.filters.DiagramEditPartPropertySectionFilter" 
            class="org.eclipse.gmf.runtime.diagram.ui.properties.sections.grid.RulerGridPropertySection" 
            tab="property.tab.DiagramPropertySection">
         </propertySection>     
 
      </propertySections>
   </extension>
   
   <!-- end Propertysheets -->
 <!-- Modeling Assistant Provider -->
   <extension
         point="org.eclipse.gmf.runtime.emf.ui.modelingAssistantProviders">
      <modelingAssistantProvider
            class="de.cau.cs.kieler.yakindu.synccharts.ui.editor.factory.SyncChartsExecutableExtensionFactory:de.cau.cs.kieler.yakindu.ui.editor.assistent.KielerModelingAssistantProvider">
         <Priority
               name="Medium">
         </Priority>
      </modelingAssistantProvider>
   </extension>
   

   
   <!-- EditPart Provider -->
   <extension
         point="org.eclipse.gmf.runtime.diagram.ui.editpartProviders">
      <editpartProvider
            class="de.cau.cs.kieler.yakindu.synccharts.ui.editor.factory.SyncChartsExecutableExtensionFactory:org.yakindu.sct.ui.editor.editor.guice.InjectableEditPartFactory">
         <Priority
               name="High">
         </Priority>
      </editpartProvider>
   </extension>
    
</plugin>

	

