<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="de.cau.cs.kieler.yakindu.sccharts.scl.commands.category"
            name="SCCharts">
      </category>
      <command
            categoryId="de.cau.cs.kieler.yakindu.sccharts.scl.commands.category"
            id="de.cau.cs.kieler.yakindu.sccharts.scl.commands.SCCToCoreTransformation"
            name="SCCToCoreTransformation">
      </command>
      <command
            categoryId="de.cau.cs.kieler.yakindu.sccharts.scl.commands.category"
            id="de.cau.cs.kieler.yakindu.sccharts.scl.commands.CoreToSCLTransformation"
            name="CoreToSCLTransformation">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.cau.cs.kieler.yakindu.sccharts.scl.handler.SCCModelFileHandler"
            commandId="de.cau.cs.kieler.yakindu.sccharts.scl.commands.SCCToCoreTransformation">
      </handler>
      <handler
            class="de.cau.cs.kieler.yakindu.sccharts.scl.handler.SCLModelFileHandler"
            commandId="de.cau.cs.kieler.yakindu.sccharts.scl.commands.CoreToSCLTransformation">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:de.cau.cs.kieler.yakindu.sccharts.scl.transformations">
         <command
               commandId="de.cau.cs.kieler.yakindu.sccharts.scl.commands.SCCToCoreTransformation"
               label="SCC to Core Transformation"
               mnemonic="A"
               style="push">
            <visibleWhen>
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <adapt
                        type="org.eclipse.core.resources.IFile">
                     <test
                           forcePluginActivation="true"
                           property="org.eclipse.core.resources.extension"
                           value="scc">
                     </test>
                  </adapt>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="de.cau.cs.kieler.yakindu.sccharts.scl.commands.CoreToSCLTransformation"
               label="Core to SCL Transformation"
               mnemonic="A"
               style="push">
            <visibleWhen>
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <adapt
                        type="org.eclipse.core.resources.IFile">
                     <test
                           forcePluginActivation="true"
                           property="org.eclipse.core.resources.extension"
                           value="scc">
                     </test>
                  </adapt>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               id="de.cau.cs.kieler.yakindu.sccharts.scl.transformations"
               label="SCCharts to Core"
               mnemonic="T">
            <separator
                  name="de.cau.cs.kieler.core.ui.separator1"
                  visible="true">
            </separator>
         </menu>
      </menuContribution>
   </extension>

</plugin>
