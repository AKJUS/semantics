scchart confluent_signal {
  output bool O;
  input bool R1;
  input bool R2;

  initial state _Depth2
  --> _S immediate with R2
  --> _Pause2 immediate;

  state _S
  --> _Depth immediate with / O = O || true;

  state _Depth
  --> _Depth;

  state _Pause2
  --> _Depth2;

  region:

  initial state _Depth2
  --> _S immediate with R1
  --> _Pause2 immediate;

  state _S
  --> _Depth immediate with / O = O || true;

  state _Depth
  --> _Depth;

  state _Pause2
  --> _Depth2;

  region _During:

  initial state _I
  --> _S immediate with / O = false;

  state _S
  --> _I;
}