
@HVLayout
scchart VVIP {
  output bool VRP_ex;
  output bool VRP_start;

  initial state top {

    region VRP_timer:

    initial state idle
    --> _Depth;

    state _Depth
    --> timer immediate with VRP_start
    --> idle immediate;

    state timer
    --> _Depth2;

    state _Depth2
    --> idle immediate with VRP_ex
    --> timer immediate;
  };

  region _During:

  state _S
  --> _Depth;

  initial state _Depth
  --> _S3 immediate with / VRP_start = false;

  state _S3
  --> _S immediate with / VRP_ex = false;
}