scchart ImmediateAborts {
  input bool Otrig;
  input bool Itrig;
  output bool O;

  state Outer {

    initial state _Depth
    --> _Aborted immediate with Otrig
    --> _Pause immediate;

    final state _Aborted;

    state _Pause
    --> _Depth;
  }
  >-> _S immediate;

  state _S
  --> _Depth immediate with / O = O || true;

  state _Depth
  --> _Depth;

  initial state A
  --> _Depth2;

  state _Depth2
  --> Outer immediate with Itrig
  --> A immediate;

  region _During:

  initial state _I
  --> _S immediate with / O = false;

  state _S
  --> _I;
}