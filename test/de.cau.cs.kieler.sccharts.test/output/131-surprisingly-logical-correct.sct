scchart S0 "logical_correct" {
  output bool A;
  output bool B;

  state _S
  --> _Depth2 immediate with / A = A || true;

  initial state S0 "s1"
  --> _Depth;

  state _Depth
  --> _S immediate with A
  --> S0 immediate;

  state _Depth2
  --> _Depth2;

  region:

  state _S
  --> _Depth2 immediate with / B = B || true;

  initial state S0 "s3"
  --> _Depth;

  state _Depth
  --> _S immediate with A & !B
  --> S0 immediate;

  state _Depth2
  --> _Depth2;

  region _During:

  state _S
  --> _Depth;

  initial state _Depth
  --> _S3 immediate with / A = false;

  state _S3
  --> _S immediate with / B = false;
}