scchart hierarchy {
  input bool I;
  output bool O;
  bool L1;
  bool L2;
  bool _trig;

  initial state H {

    region _Entry:

    state _Main {

      state _Depth2
      --> _Aborted immediate with _trig
      --> _Pause2 immediate;

      final state _Aborted;

      state _S
      --> _Depth2 immediate with / L1 = L1 || true;

      initial state A
      --> _Depth;

      state _Depth
      --> _S immediate with I
      --> _S3 immediate;

      state _S3
      --> _Aborted immediate with _trig
      --> A immediate;

      state _Pause2
      --> _Depth2;

      region _Ctrl:

      final state _Done;

      state _S
      --> _Done immediate with / _trig = true;

      initial state _Run
      --> _Depth;

      state _Depth
      --> _S immediate with L2
      --> _Run immediate;
    }
    >-> _Done;

    initial state _Init
    --> _Main immediate with / _trig = false;

    final state _Done;
  }
  >-> _S immediate;

  state _S
  --> _Depth immediate with / O = O || true;

  state _Depth
  --> _Depth;

  region:

  state _S
  --> C immediate with / L2 = L2 || true;

  initial state C
  --> _Depth;

  state _Depth
  --> _S immediate with L1
  --> C immediate;

  region _During:

  state _S
  --> _Depth;

  initial state _Depth
  --> _S3 immediate with / O = false;

  state _S3
  --> _S4 immediate with / L1 = false;

  state _S4
  --> _S immediate with / L2 = false;
}