scchart _59_localsignals "59-localsignals" {
  input bool I;
  output bool O;
  bool _trig;

  state InnerState {
    bool L;

    region _Entry:

    state _Main {

      state _Depth2
      --> _Aborted immediate with _trig
      --> _Pause2 immediate;

      final state _Aborted;

      state _S
      --> _Depth2 immediate with / L = L || true;

      initial state A
      --> _Depth;

      state _Depth
      --> _S immediate with I
      --> _S3 immediate;

      state _S3
      --> _Aborted immediate with _trig
      --> A immediate;

      state _Pause2
      --> _Depth2;

      region:

      state _Depth2
      --> _Aborted2 immediate with _trig
      --> _Pause2 immediate;

      final state _Aborted2;

      state _S
      --> _Depth2 immediate with / O = O || true;

      initial state C
      --> _Depth;

      state _Depth
      --> _S immediate with L
      --> _S3 immediate;

      state _S3
      --> _Aborted2 immediate with _trig
      --> C immediate;

      state _Pause2
      --> _Depth2;

      region _During:

      initial state _Depth2
      --> _S immediate with / L = false;

      state _S
      --> _Aborted3 immediate with _trig
      --> _Pause2 immediate;

      final state _Aborted3;

      state _Pause2
      --> _Depth2;

      region _Ctrl:

      final state _Done;

      state _S
      --> _Done immediate with / _trig = true;

      initial state _Run
      --> _Depth;

      state _Depth
      --> _S immediate with O
      --> _Run immediate;
    }
    >-> _Done;

    initial state _Init
    --> _Main immediate with / _trig = false;

    final state _Done;
  }
  >-> _Depth immediate;

  initial state S
  --> InnerState;

  state _Depth
  --> _Depth;

  region _During:

  initial state _I
  --> _S immediate with / O = false;

  state _S
  --> _I;
}