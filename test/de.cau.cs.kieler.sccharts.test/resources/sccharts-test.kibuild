// Compile models to C code
model compiler kico {
  outputFolder: kieler-gen
  outputFileExtension: c
  // Compile from SCCharts to C without taken transition signaling
  compileChain: de.cau.cs.kieler.sccharts.netlist.simple
  // No need to communicate register variables, because there is no need to step back in the simulation history
  communicateRegisterVariables: false
  
  // Generate simulation from output of compilation
  process simulation template {
    file: assets/CSimulation.ftl
  }
}

// Compile generated simulation
simulation compiler c {
  libFolder: kieler-gen/sim/lib
  outputFolder: kieler-gen/sim/bin
  command: "gcc -std=c99 -o \"./${outputFolder}/${executable_name}\" \"${file_path}\" "
}
