scchart ^suspend {
  input bool I;
  output bool O;

  initial state A {
    bool _enabled = true;

    state _S
    --> A1 immediate / O = O | true;

    initial state A1
    --> _Depth;

    state _Depth
    --> _S immediate with _enabled
    --> A1 immediate;

    region _During:

    state _Depth
    --> _I immediate / _enabled = !I;

    initial state _I
    --> _Depth;
  };

  region _During:

  state _Depth
  --> _I immediate / O = false;

  initial state _I
  --> _Depth;
}