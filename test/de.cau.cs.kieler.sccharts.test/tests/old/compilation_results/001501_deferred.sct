scchart ^deferred {

  initial state A {
    bool O;
    bool _deferred = false;
    bool _trig;

    state A2 {

      region _Entry:

      state _Main {

        region _During:

        initial state _I
        --> _Aborted immediate with _trig
        --> _Pause immediate;

        final state _Aborted;

        state _Depth
        --> _I immediate / _deferred = false;

        state _Pause
        --> _Depth;

        region _Ctrl:

        final state _Done;

        state _Depth
        --> _Done immediate / _trig = true;

        initial state _Run
        --> _Depth;
      }
      >-> _Done;

      initial state _Init
      --> _Main immediate / _trig = false;

      final state _Done;
    }
    >-> A1 immediate;

    state _Depth
    --> _S2 immediate / O = true;

    state _S2
    --> A2 immediate / _deferred = true;

    initial state A1
    --> _Depth;
  };
}