scchart WeakAbort {
  input bool I;

  initial state A {

    initial state A0
    --> _Depth immediate with I
    --> _Pause immediate;

    final state _Depth;

    state _Pause
    --> _Depth;

    region _Ctrl:

    initial state _Run
    --> _Done immediate with I
    --> _Pause immediate;

    final state _Done;

    state _Pause
    --> _Depth;

    state _Depth
    --> _Done immediate with I
    --> _Pause immediate;
  }
  >-> F immediate;

  final state F;
}