scchart ConditionalTermination {
  input bool I;

  initial state A {
    bool _termRegion;

    region _Entry:

    state _Main {

      region _Ctrl:

      initial state _Run
      --> _Done immediate with _termRegion & I
      --> _Pause immediate;

      final state _Done;

      state _Pause
      --> _Depth;

      state _Depth
      --> _Done immediate with _termRegion & I
      --> _Pause immediate;

      region _Main:

      initial state _Main2 {

        final state _Depth;

        initial state A0
        --> _Depth;
      }
      >-> _S;

      final state _Term;

      state _S
      --> _Term immediate / _termRegion = true;
    }
    >-> _Done;

    initial state _Init
    --> _Main immediate / _termRegion = false;

    final state _Done;
  }
  >-> F immediate;

  final state F;
}